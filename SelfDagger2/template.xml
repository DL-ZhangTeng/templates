<?xml version="1.0"?>
<template
    format="5"
    revision="5"
    name="Dagger2"
    minApi="9"
    minBuildApi="14"
    description="Creates a new empty activity">

    <category value="Mode" />
    <formfactor value="Mobile" />

 
    <parameter
        id="component"
        name="Component Name"
        type="string"
        default="Component"/>
    <parameter
        id="module"
        name="Module Name"
        type="string"
        default="Module"/>
    <parameter
        id="packageName"
        name="Package name"
        type="string"
        constraints="package"/>

    <!-- 128x128 thumbnails relative to template.xml -->
    <thumbs>
        <!-- default thumbnail is required -->
        <thumb>template_blank_activity.png</thumb>
    </thumbs>

    <globals file="globals.xml.ftl" />
    <execute file="recipe.xml.ftl" />

</template>
