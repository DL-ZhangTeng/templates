<?xml version="1.0"?>
<template
    format="5"
    revision="5"
    name="ControlUtils"
    minApi="9"
    minBuildApi="14"
    description="Creates a new template for ControlUtils">

    <category value="Utils" />
    <formfactor value="Mobile" />

	<parameter
            id="className"
            name="ControlUtils Name"
            type="string"
            constraints="class|unique|nonempty"
            default="ControlUtils"
            help="The name of the ControlUtils class to create"/>

		
    <!-- 128x128 thumbnails relative to template.xml -->
    <thumbs>
        <!-- default thumbnail is required -->
        <thumb>template_blank_activity.png</thumb>
    </thumbs>

    <globals file="globals.xml.ftl" />
    <execute file="recipe.xml.ftl" />

</template>
