<?xml version="1.0"?>
<template
    format="5"
    revision="5"
    name="MVP"
    minApi="9"
    minBuildApi="14"
    description="Creates a new empty activity">

    <category value="Mode" />
    <formfactor value="Mobile" />
	<parameter
        id="isBaseMVP"
        name="is BaseMVP File?"
        type="boolean"
        default="false"
        help="If true, a BaseMVP file will be generated" />
	<parameter
        id="prefix"
        name="Prefix Name"
        type="string"
        default=""/>
    <parameter
        id="presenter"
        name="Presenter Name"
        type="string"
		suggest="${underscoreToCamelCase(classToResource(prefix))}Presenter"
		constraints="class|unique|nonempty"
        default="Presenter"/>

    <parameter
        id="view"
        name="View Name"
        type="string"
		constraints="class|unique|nonempty"
		suggest="${underscoreToCamelCase(classToResource(prefix))}View"
        default="View"/>
    <parameter
        id="model"
        name="Model Name"
        type="string"
		constraints="class|unique|nonempty"
		suggest="${underscoreToCamelCase(classToResource(prefix))}Model"
        default="Model"/>
    <parameter
        id="packageName"
        name="Package name"
        type="string"
        constraints="package"/>

    <!-- 128x128 thumbnails relative to template.xml -->
    <thumbs>
        <!-- default thumbnail is required -->
        <thumb>template_blank_activity.png</thumb>
    </thumbs>

    <globals file="globals.xml.ftl" />
    <execute file="recipe.xml.ftl" />

</template>
