<?xml version="1.0"?>
<template
    format="5"
    revision="5"
    name="ViewPagerIndicator"
    minApi="9"
    minBuildApi="14"
    description="Creates a new ViewPagerIndicator">

    <category value="Widget" />
    <formfactor value="Mobile" />

    <parameter
        id="isTabStrip"
        name="isTabStrip?SlidingTabStrip:PageIndicator"
        type="boolean"
        default="true"
       />

    <!-- 128x128 thumbnails relative to template.xml -->
    <thumbs>
        <!-- default thumbnail is required -->
        <thumb>template_blank_activity.png</thumb>
    </thumbs>

    <globals file="globals.xml.ftl" />
    <execute file="recipe.xml.ftl" />

</template>
